{
  "name": "employee-status",
  "engines": {
    "node": ">=22.10.0"
  },
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn dlx -q concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:build": "yarn dlx -q concurrently \"yarn dev:server\" \"yarn dev:client:watch\"",
    "dev:client": "vite --force",
    "dev:server": "node --experimental-strip-types --watch src/server/index.ts",
    "dev:client:watch": "vite build --watch",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p tsconfig.node.json",
    "serve": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-aria": "^3.32.1",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.49",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vitest": "^2.1.6"
  }
}
